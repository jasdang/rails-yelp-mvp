<h3><strong><%= @restaurant.name.capitalize %></strong></h3>
<h5>Reviews</h5>
<% @restaurant.reviews.each do |review| %>
  <p><strong><%= "#{review.rating} ⭐" %></strong> <%= review.content %></p>
  <p></p>
  <hr>
<% end %>
<p> <%= link_to "Leave a review", new_restaurant_review_path(@restaurant) %> </p>
<p> <%= link_to "Back", restaurants_path %> </p>
